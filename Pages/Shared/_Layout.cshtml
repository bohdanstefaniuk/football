<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Football</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/matches.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true"/>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/app.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/css/app.css" asp-append-version="true"/>
    </environment>

    <meta name="description" content="Native Stats - Recent, Upcoming Matches and Football Statistics">
    <meta name="keywords" content="Football, Recent Matches, Upcoming Matches, Football Statistics, Native Stats">
    <meta name="author" content="Native Stats">
</head>
<body>

<header>
    <h1>NATIVE STATS</h1>
    <div class="header-buttons">
        <a href="#" class="header-button">Register</a>
        <a href="#" class="header-button">Login</a>
    </div>
</header>

<nav>
    <a href="/upcoming" class="nav-button @(ViewData["Title"]!.ToString()!.Contains("Upcoming") ? "selected" : "")">Upcoming</a>
    <a href="/recent" class="nav-button @(ViewData["Title"]!.ToString()!.Contains("Recent") ? "selected" : "")">Recent</a>
</nav>

<div class="container">
    @RenderBody()
</div>


<environment include="Development">
    <script src="~/js/league-card.component.js" asp-append-version="true"></script>
    <script src="~/js/match-card.component.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/app.js" asp-append-version="true"></script>
</environment>



@await RenderSectionAsync("Scripts", required: false)
</body>
</html>